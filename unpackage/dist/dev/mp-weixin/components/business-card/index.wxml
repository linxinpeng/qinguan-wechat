<view class="card-item"><block wx:if="{{cardInfo.isHot}}"><view class="list-record"><image src="../../static/record.png" mode="widthFix"></image></view></block><view class="list-header"><block wx:if="{{cardInfo.headerIcon}}"><view class="list-header__user"><image src="{{cardInfo.headerIcon}}" mode="widthFix"></image></view></block><text class="list-header__name">{{cardInfo.name}}</text><text class="list-header__company">{{"｜ "+(cardInfo.companyName||'无')}}</text><view class="list-header__tag"><block wx:for="{{cardInfo.status}}" wx:for-item="item" wx:for-index="idx" wx:key="idx"><image src="{{item}}" mode="widthFix"></image></block></view></view><view class="list-desc">{{''+cardInfo.desc+''}}</view><view class="list-footer"><text class="list-footer__btn">{{cardInfo.tag}}</text><view><text class="list-footer__time">{{cardInfo.time}}</text><view class="list-footer__show"><image src="../../static/show-eye.png" mode="widthFix"></image>{{''+cardInfo.show+''}}</view></view></view></view>