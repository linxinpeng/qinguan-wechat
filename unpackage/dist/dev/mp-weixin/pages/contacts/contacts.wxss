.contact {
  min-height: 100vh;
  background-color: #F4F5F9;
}
.contact__cont {
  padding: 0 30rpx;
}
.contact__cont .title {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 30rpx;
}
.card {
  background-color: #fff;
  padding: 0 24rpx;
  margin-bottom: 20px;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
}
.card-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  font-size: 24rpx;
  color: #999999;
  border-bottom: 2rpx solid #eee;
}
.card-top__author {
  width: 48rpx;
  height: 48rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
  margin-right: 12rpx;
}
.card-top__author image {
  width: 100%;
}
.card-top text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.card-top__company {
  margin-right: 10rpx;
}
.card-top__status {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.card-top__status image {
  width: 23rpx;
  margin-right: 10rpx;
}
.card-info {
  padding: 20px 0 0 0;
}
.card-info__item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-bottom: 16px;
  font-size: 28rpx;
  color: #333333;
}
.card-info__item .card-icon {
  width: 24rpx;
  margin-right: 24rpx;
}
.card-info__item .card-icon image {
  width: 100%;
  display: block;
}

