.search-wrap {
  background: #F4F5F9;
  min-height: 100vh;
}
.search-wrap .search-hot {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 30rpx;
}
.search-wrap .search-hot label {
  font-size: 24rpx;
  font-weight: 500;
  color: #31384A;
  margin-right: 16rpx;
  white-space: nowrap;
}
.search-wrap .search-hot__item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-right: 16rpx;
}
.search-wrap .search-hot__item image {
  width: 18rpx;
}
.search-wrap .search-hot__item text {
  font-size: 24rpx;
  color: #828898;
  padding-left: 6rpx;
  white-space: nowrap;
}
.search-wrap .search-cont {
  padding: 0 30rpx 40rpx 30rpx;
}
.search-wrap .search-cont__total {
  padding: 42rpx 0 30rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

